            .c-link {
                position: relative;
                color: #999;
            }
    
            .c-link:not(:last-of-type) {
                margin-right: 15px;
            }
    
            .c-tooltip::before,
            .c-tooltip::after {
                display: block;
                position: absolute;
                left: 50%;
                -webkit-transform: translate(-50%, -10px);
                transform: translate(-50%, -10px);
                opacity: 0;
                transition: .2s;
            }
    
            .c-tooltip::before {
                content: '';
                bottom: calc(100% + 2px);
                border: solid 5px transparent;
                border-top-color: currentColor;
            }
    
            .c-tooltip::after {
                content: attr(aria-label);
                bottom: calc(100% + 12px);
                padding: .61em .93em;
                font-size: .875rem;
                color: #FFF;
                border-radius: 3px;
            }
    
            .c-tooltip:hover::before,
            .c-tooltip:hover::after {
                opacity: 1;
                -webkit-transform: translate(-50%);
                transform: translate(-50%);
            }
    
            footer nav ul li {
                font-size: 1.8rem;
                padding: 10px;
            }
    
            .creditos {
                margin-bottom: 30px;
            }
    
            .creditos a {
                color: #17a2b8;
                opacity: 0.8;
                text-decoration: none;
            }
    
            .creditos a:hover {
                color: #0d8597;
            }
    
            .creditos span {
                font-weight: bold;
            }
            /*Outros estilos da pagina*/
            .btn{
              background-color: black;
              color: #fff;
                 }

            .navbar{
               background-color: black;
                   }

            .navbar-brand {
               color: #fff;
                 }

            .navbar-brand:hover {
                color: rgb(58, 58, 58);
                    }
        </style>
