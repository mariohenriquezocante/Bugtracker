            /* Ícones Redes Sociais */
            .c-link--facebook:hover {
                color: #3b5998;
            }
    
            .c-link--github:hover {
                color: #EA4E2E;
            }
    
            .c-link--linkedin:hover {
                color: #0077B5;
            }
    
            .c-link--instagram:hover {
                color: #8134AF;
            }
    
            .c-link--facebook:hover::after {
                background: #3b5998;
            }
    
            .c-link--github:hover::after {
